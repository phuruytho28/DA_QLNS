@{
    ViewBag.Title = "DashboardView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Dashboard Thống Kê</h2>

    <!-- Row for Pie Charts -->
    <div class="row text-center">
        <div class="col-md-4">
            <canvas id="pieChart1"></canvas>
            <p>Thống kê 1</p>
        </div>
        <div class="col-md-4">
            <canvas id="pieChart2"></canvas>
            <p>Thống kê 2</p>
        </div>
        <div class="col-md-4">
            <canvas id="pieChart3"></canvas>
            <p>Thống kê 3</p>
        </div>
    </div>

    <!-- Row for Bar Charts -->
    <div class="row text-center mt-4">
        <div class="col-md-6">
            <canvas id="barChart1"></canvas>
            <p>Biểu đồ cột 1</p>
        </div>
        <div class="col-md-6">
            <canvas id="barChart2"></canvas>
            <p>Biểu đồ cột 2</p>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    $(document).ready(function () {
        Core.showToast("This is a test message", "success");

        // Data for pie charts
        var pieData = {
            labels: ["Nhân sự", "Tài chính", "Hoạt động", "Bán hàng"],
            datasets: [{
                data: [300, 50, 100, 200],
                backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56", "#4CAF50"],
                hoverBackgroundColor: ["#FF6384", "#36A2EB", "#FFCE56", "#4CAF50"]
            }]
        };

        // Initialize Pie Charts
        new Chart(document.getElementById("pieChart1"), {
            type: 'pie',
            data: pieData,
            options: { responsive: true }
        });
        new Chart(document.getElementById("pieChart2"), {
            type: 'pie',
            data: pieData,
            options: { responsive: true }
        });
        new Chart(document.getElementById("pieChart3"), {
            type: 'pie',
            data: pieData,
            options: { responsive: true }
        });

        // Data for bar charts
        var barData1 = {
            labels: ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4"],
            datasets: [{
                label: 'Thống kê A',
                data: [65, 59, 80, 81],
                backgroundColor: "#36A2EB"
            }]
        };

        var barData2 = {
            labels: ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4"],
            datasets: [{
                label: 'Thống kê B',
                data: [28, 48, 40, 19],
                backgroundColor: "#FF6384"
            }]
        };

        // Initialize Bar Charts
        new Chart(document.getElementById("barChart1"), {
            type: 'bar',
            data: barData1,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
        new Chart(document.getElementById("barChart2"), {
            type: 'bar',
            data: barData2,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>
