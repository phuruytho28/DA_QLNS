@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Đăng ký</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
    <link href="~/Content//vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/img/Logo.jpg" rel="icon">
    <!-- //web font -->
    <link href="~/Content/css/register.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <!-- main -->
    <div class="main-w3layouts wrapper">
        <h1 class="text-white">ĐĂNG KÝ TÀI KHOẢN</h1>
        <div class="main-agileinfo">
            <div class="agileits-top">
                <form action="#" method="post">
                    <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 25px; color:white">
                        <i class="bi bi-house-fill text-light" style="margin-right: 10px;"></i>
                        <i>
                            @Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "text-light", style = "color: white; text-decoration: none" })
                        </i>
                    </div>
                    <input class="text ms-2" type="text" id="Name" name="Username" placeholder="Họ và tên" required="">
                    <input class="text ms-2 mt-4" id="company_name" type="text" placeholder="Nhập tên doanh nghiệp" required="">
                    <input class="text ms-2 mt-4" id="company_location" type="text" placeholder="Nhập địa chỉ doanh nghiệp" required="">
                    <input class="text ms-2 mt-4" id="company_phone" type="number" placeholder="Nhập số điện thoại" required="">
                    <input class="text ms-2 email" type="email" id="Gmail" name="email" placeholder="Email" required="">
                    <input class="text ms-2" type="password" name="password" id="Password" placeholder="Mật khẩu" required="">
                    <input class="text ms-2 w3lpass" type="password" id="rePassword" name="password" placeholder="Nhập lại mật khẩu" required="">
                    <div class="wthree-text-1">
                        <label class="anim">
                            <input type="checkbox" class="checkbox" id="showpassword">
                            <span>Hiện mật khẩu</span>
                        </label>
                    </div>
                    <div class="wthree-text ms-2 mt-1" style="margin-top:20px">
                        <label class="anim">
                            <input type="checkbox" id="AcceptPolicy" class="checkbox" required="">
                            <span class="ms-1">Tôi đồng ý với các <a class="text-dark" href="https://apolatlegal.com/vi/blog/luat-ban-quyen-phan-mem/" style="text-decoration: none">điều khoản</a> và <a class="text-dark" href="https://chinhphu.vn/default.aspx?pageid=27160&docid=29137" style="text-decoration: none">chính sách</a> sử dụng</span>
                        </label>
                    </div>
                    <input style="margin-top:30px" id="saveButton" type="submit" value="Đăng ký">
                </form>
                <p>
                    Bạn đã có tài khoản
                    @Html.ActionLink("Đăng nhập!", "LoginView", "Login", new { area = "" }, new { @class = "", style = "text-decoration: none" })
                </p>
            </div>
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; top: 20px; right: 20px;">
                <div class="toast-header">
                    <strong class="mr-auto">Thông báo</strong>
                    <button type="button" class="close" data-dismiss="toast" aria-label="Close" style="margin-left: auto; border-radius: 50%; background: none; border: none; font-size: 20px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                </div>
            </div>



        </div>
        <!-- copyright -->
        <div class="colorlibcopy-agile">
            <p>© 2024 Vuduytho. All rights reserved | Design by <a href="https://www.facebook.com/fcbduythovu2002" target="_blank" style="text-decoration: none">Vuduytho</a></p>
        </div>
        <!-- //copyright -->
        <ul class="colorlib-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <!-- //main -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap") 
    <script src="~/JS/LogIn_Register_Logout/Register.js"></script>
    <script>
        var list = new List();
        list.init();
    </script>

</body>
</html>