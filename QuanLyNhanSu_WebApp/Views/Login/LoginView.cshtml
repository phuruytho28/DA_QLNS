@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content//vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
    <link href="~/Content/img/Logo.jpg" rel="icon">
    <!-- //web font -->
    <link href="~/Content/css/register.css" rel="stylesheet" />
    <link href="~/Content/css/register.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- main -->
    <div class="main-w3layouts wrapper">
        <h1 class="text-white">ĐĂNG NHẬP TÀI KHOẢN</h1>
        <div></div>
        <div class="main-agileinfo">
            <div class="agileits-top">
                <form action="#" method="post">
                    <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 25px; color:white" ">
                        <i class="bi bi-house-fill text-light" style="margin-right: 10px;"></i> <!-- Icon from Font Awesome -->
                        <i>
                            @Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "text-light", style = "color: white; text-decoration :  none" })
                        </i>
                    </div>
                    <input class="text email" type="email" id="Gmail" name="email" placeholder="Email" required="">
                    <input class="text" type="password" id="Password" style="margin-bottom: 25px" name="password" placeholder="Mật khẩu" required="">
                    <div class="wthree-text" id="forgotpassword">
                        <label class="anim">
                            <i class="bi bi-question-circle me-1"></i>
                            <span>Quên mật khẩu</span>
                        </label>
                        <div class="clear"> </div>
                    </div>
                    <input type="submit" id="btnLogin" value="Đăng nhập">
                </form>
                <p>
                    Bạn chưa có tài khoản
                    @Html.ActionLink("Đăng Ký!", "RegisterView", "Register", new { area = "" }, new { @class = "", style = "text-decoration: none" })
                </p>
            </div>
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; top: 20px; right: 20px;">
                <div class="toast-header">
                    <strong class="mr-auto">Thông báo</strong>
                    <button type="button" class="close" data-dismiss="toast" aria-label="Close" style="margin-left: auto; border-radius: 50%; background: none; border: none; font-size: 20px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                </div>
            </div>
        </div>
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; top: 20px; right: 20px;">
            <div class="toast-header">
                <strong class="mr-auto">Thông báo</strong>
                <button type="button" class="close" data-dismiss="toast" aria-label="Close" style="margin-left: auto; border-radius: 50%; background: none; border: none; font-size: 20px;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
            </div>
        </div>
        <!-- copyright -->
        <div class="colorlibcopy-agile bottom-1">
            <p>© 2024 Vuduytho. All rights reserved | Design by <a href="https://www.facebook.com/fcbduythovu2002" target="_blank" style="text-decoration: none;">Vuduytho</a></p>
        </div>
        <!-- //copyright -->
        <ul class="colorlib-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <!-- //main -->
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap") 
    <script src="~/JS/LogIn_Register_Logout/Login.js"></script>
    <script>
        var list = new List();
        list.init();
    </script>
</body>
</html>
